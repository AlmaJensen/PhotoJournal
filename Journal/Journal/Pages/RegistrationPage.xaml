<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Journal.Pages.RegistrationPage">
	<StackLayout VerticalOptions="FillAndExpand">
		<Entry Placeholder="{ Binding NamePlaceHolder}" Text="{Binding NameText}"></Entry>
		<Label	Text="{Binding NameError}" IsVisible="{Binding NameErrorVisible}"></Label>
		<Entry Placeholder="{ Binding EmailPlaceHolder}" Text="{Binding EmailText}"></Entry>
		<Label	Text="{Binding EmailError}" IsVisible="{Binding EmailErrorVisible}"></Label>
		<Entry Placeholder="{ Binding PasswordPlaceHolder}" Text="{Binding PasswordText}"></Entry>
		<Label	Text="{Binding PasswordError}" IsVisible="{Binding PasswordErrorVisible}"></Label>
		<Entry Placeholder="{ Binding PinPlaceHolder}" Text="{Binding PinText}" Keyboard="Numeric"></Entry>
		<Label	Text="{Binding PinError}" IsVisible="{Binding PinErrorVisible}"></Label>
		<Button Text="{Binding RegisterText}" Command="{Binding RegisterCommand}"></Button>
</StackLayout>
</ContentPage>