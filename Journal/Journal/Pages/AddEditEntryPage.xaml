<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Journal.Pages.AddEditEntryPage">
	<StackLayout VerticalOptions="FillAndExpand">
		<StackLayout Orientation="Horizontal">
			<Image Source="{Binding MainImage}"></Image>
			<Entry Text="{Binding TitleText}" Placeholder="Entry Title"/>
			<Button Command="{Binding SaveEntry}" Text="Save"/>
		</StackLayout>
			<Editor Text="{Binding MainText}" VerticalOptions="FillAndExpand"/>	
	</StackLayout>
</ContentPage>